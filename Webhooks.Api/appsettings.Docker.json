{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgresConnection": "Host=webhooks.db;Database=WebhooksDb;Username=postgres;Password=postgres"
  },
  "Serilog": {
    "Properties": {
      "Application": "Webhooks.Api"
    },
    "Using": [ "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft" : "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://webhooks.seq:5341"   
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "RabbitMQ": {
    "Host": "rabbitmq",
    "Username": "guest",
    "Password" : "guest"
  },
  "Authentication":{
    "Keycloak": {
      "AuthorizationUrl" : "http://localhost:18080/realms/myrealm/protocol/openid-connect/auth",
      "MetadataAddress" : "http://webhooks.keycloak:8888/realms/myrealm/.well-known/openid-configuration",
      "ValidIssuer": "http://localhost:18080/realms/myrealm",
      "Audience": "account"
    },
    "WebhooksApi": {
      "Issuer": "Webhooks.Api",
      "Audience": "Webhooks.Api",
      "SecretKey": "super-super-secret-key-value-with-more-than-32-chars!"
    }
  }
}